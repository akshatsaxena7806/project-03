<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="AnnouncementDTO" table="ST_ANNOUNCEMENT">

		<id name="id" type="java.lang.Long">
			<column name="ID"/>
			<generator class="identity"/>
		</id>

		<property name="announcementCode" type="java.lang.String">
			<column name="ANNOUNCEMENT_CODE" unique="true" not-null="true"/>
		</property>

		<property name="title" type="java.lang.String">
			<column name="TITLE" not-null="true"/>
		</property>

		<property name="description" type="java.lang.String">
			<column name="DESCRIPTION"/>
		</property>

		<property name="publishDate" type="java.util.Date">
			<column name="PUBLISH_DATE"/>
		</property>

	</class>

</hibernate-mapping>