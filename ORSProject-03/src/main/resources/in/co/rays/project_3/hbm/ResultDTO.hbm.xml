<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="ResultDTO" table="ST_RESULT">

		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="identity" />
		</id>

		<!-- Unique Result Code -->
		<property name="resultCode" type="java.lang.String">
			<column name="RESULT_CODE" unique="true" not-null="true" />
		</property>

		<property name="studentName" type="java.lang.String">
			<column name="STUDENT_NAME" />
		</property>

		<property name="marks" type="java.lang.Integer">
			<column name="MARKS" />
		</property>

		<property name="grade" type="java.lang.String">
			<column name="GRADE" />
		</property>

	</class>

</hibernate-mapping>