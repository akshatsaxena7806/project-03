<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

	<class name="EventDTO" table="ST_EVENT">

		<id name="id" type="java.lang.Long">
			<column name="ID"/>
			<generator class="identity"/>
		</id>

		<property name="eventCode" type="java.lang.String">
			<column name="EVENT_CODE" unique="true" not-null="true"/>
		</property>

		<property name="eventName" type="java.lang.String">
			<column name="EVENT_NAME" not-null="true"/>
		</property>

		<property name="eventDate" type="java.util.Date">
			<column name="EVENT_DATE"/>
		</property>

		<property name="organizer" type="java.lang.String">
			<column name="ORGANIZER"/>
		</property>

		<property name="eventStatus" type="java.lang.String">
			<column name="EVENT_STATUS"/>
		</property>

	</class>

</hibernate-mapping>